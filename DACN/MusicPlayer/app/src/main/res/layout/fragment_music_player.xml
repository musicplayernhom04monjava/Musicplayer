<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_08dp"
        android:layout_marginLeft="@dimen/margin_padding_12dp"
        android:layout_marginRight="@dimen/margin_padding_12dp">
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_30dp"
            android:layout_weight="0.5"
            android:background="@drawable/background_edittext_round"
            android:paddingRight="@dimen/margin_padding_08dp"
            android:paddingLeft="@dimen/margin_padding_08dp"
            android:hint="Nhập từ khóa..."
            />
        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_padding_40dp"
            android:layout_weight="1"
            android:text="Tìm kiếm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_music_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>