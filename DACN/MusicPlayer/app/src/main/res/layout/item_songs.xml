<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_25dp"
        android:layout_marginLeft="@dimen/margin_padding_10dp"
        android:layout_marginRight="@dimen/margin_padding_10dp"
        android:text="Bài hát"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/margin_padding_20dp" />
    <TextView
        android:id="@+id/textview_singer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_25dp"
        android:layout_marginLeft="@dimen/margin_padding_10dp"
        android:layout_marginRight="@dimen/margin_padding_10dp"
        android:text="Ca sĩ"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/margin_padding_15dp" />
</LinearLayout>