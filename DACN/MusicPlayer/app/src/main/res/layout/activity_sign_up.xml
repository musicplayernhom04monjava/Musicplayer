<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_signin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_padding_40dp">
        <ImageView
            android:layout_width="@dimen/margin_padding_100dp"
            android:layout_height="@dimen/margin_padding_100dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@drawable/background_linearlayout_round"
        android:layout_marginRight="@dimen/margin_padding_10dp"
        android:layout_marginLeft="@dimen/margin_padding_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_padding_20dp"
            android:layout_marginTop="@dimen/margin_padding_15dp"
            android:layout_marginRight="@dimen/margin_padding_20dp">
            <ImageView
                android:id="@+id/img_username"
                android:layout_width="@dimen/margin_padding_30dp"
                android:layout_height="@dimen/margin_padding_30dp"
                android:background="@color/colorWhite"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/edt_usernameSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_padding_45dp"
                android:hint="Tên đăng nhập"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_padding_10dp"
            android:layout_marginLeft="@dimen/margin_padding_20dp"
            android:layout_marginRight="@dimen/margin_padding_20dp">
            <ImageView
                android:id="@+id/img_password"
                android:layout_width="@dimen/margin_padding_30dp"
                android:layout_height="@dimen/margin_padding_30dp"
                android:background="@color/colorWhite"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/edt_passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_padding_45dp"
                android:hint="Mật khẩu"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_padding_10dp"
            android:layout_marginLeft="@dimen/margin_padding_20dp"
            android:layout_marginRight="@dimen/margin_padding_20dp">
            <ImageView
                android:id="@+id/img_fullname"
                android:layout_width="@dimen/margin_padding_30dp"
                android:layout_height="@dimen/margin_padding_30dp"
                android:background="@color/colorWhite"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/edt_fullnameSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_padding_45dp"
                android:hint="Họ và Tên"
                />

        </LinearLayout>
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="@dimen/margin_padding_180dp"
            android:layout_height="@dimen/margin_padding_40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_padding_10dp"
            android:layout_marginTop="@dimen/margin_padding_10dp"
            android:background="@drawable/background_button_round"
            android:text="Đăng ký"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>